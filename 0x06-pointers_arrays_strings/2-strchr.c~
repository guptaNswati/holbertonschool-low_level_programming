#include "holberton.h"

/**
* *_strchr - locates a character in a string
* @s: pointer to string
* @c: character to search for
* Return: pointer to the first occurrence of the c in s, or NULL
**/

char *_strchr(char *s, char c)
{
	int i = 0;

	while (*s != '\0')
	{
		if (s == c)
		{
			return (s);
		}
		s++;
	}
	return ('\0');
}
