#include "holberton.h"
#include <stdio.h>
/**
* _sqrt_recursion - finds the natural square root of a number
* @n: given number
* Return: square root of n or -1
**/
int _sqrt_recursion(int n)
{
	int m;

	m = n;
	if (n <= 0)
	{
		return (-1);
	}
	if (n == 1)
	{
		return (1);
	}
	else
	{
		if ((n - 1) * (n - 1) == m)
		{
			/*	printf("n is %d\n", n); */
			return (n - 1);
		}
	}
	printf("m is %d\n", m);

/*	printf("n outside %d\n", n); */
	return (_sqrt_recursion(n / 2));
}
